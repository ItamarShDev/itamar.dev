{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"ignore": ["**/node_modules/*", ".next/*", "public/*", ".vscode/*"],
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": {
					"level": "info"
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"ignore": ["**/node_modules/*", ".next/*", "public/*", ".vscode/*"]
	}
}
